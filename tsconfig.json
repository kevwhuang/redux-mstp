{
    "include": [
        "src",
    ],
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "esnext",
        "target": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
        ],
        "types": [
            "vite/client"
        ],
        // Bundle
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        // Lint
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
    },
    "references": [
        {
            "path": "./tsconfig.node.json",
        },
    ],
}